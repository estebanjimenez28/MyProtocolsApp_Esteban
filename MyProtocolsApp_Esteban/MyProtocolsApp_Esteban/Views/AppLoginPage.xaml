<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocolsApp_Esteban.Views.AppLoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Gainsboro"
             BackgroundImageSource="AppLogin">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50, 25, 50, 25">
            <Entry  x:Name="TxtUserName" Placeholder="Email" FontSize="30" Keyboard="Email"/>
            <Entry x:Name="TxtPassword" Placeholder="Password" FontSize="" Keyboard="Default" IsPassword="True"/>

            <Switch x:name="SwShowPassword" IsToggled="False" Toggled="Switch_Toggled"/>

            <Button x:Name="BtnLogin" Text="LOGIN" BackgroundColor="Green" CornerRadius="15"/>

            <Button x:Name="BtnSignUp" Text="SIGN UP" BackgroundColor="Blue" CornerRadius="15"/>

            <Label x:Name="LblPasswordRecovery" Text="Password Recovery..."/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>